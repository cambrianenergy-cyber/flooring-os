rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // TEMPORARY: Super permissive rules for debugging
    // TODO: Lock these down after confirming everything works
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Allow any signed-in user to read/write any document
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
